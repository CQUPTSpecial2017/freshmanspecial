<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="onClick"
            type="com.mredrock.freshmanspecial.Ui.Special_2017_HomePagerActivity.Presenter"
            >
        </variable>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Special_2017_whileBack">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Special_2017_whileBack"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/special_2017_change_color"
                >


                <TextView
                    android:id="@+id/special_2017_home_pager_inter"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/special_2017_home_pager_inter">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/Special_2017_home_pager_title"
                        android:textColor="@color/Special_2017_whileBack"
                        android:textSize="@dimen/Special_2017_title"
                        android:layout_marginBottom="20dp"/>
                    <ImageView
                    android:layout_width="13dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/special_2017_back"
                    android:layout_marginLeft="18dp"
                    android:onClick="@{() -> onClick.onBack()}"
                    /></RelativeLayout>

            </RelativeLayout>

            <com.mredrock.freshmanspecial.Ui.View.RatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginTop="20dp"
                app:ratio="0.381">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:cardElevation ="0dp"
                    android:background="#fff"
                    android:onClick="@{() -> onClick.onStrategyClick()}"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/special_2017_cqupt_strategy"/>


                </android.support.v7.widget.CardView>
            </com.mredrock.freshmanspecial.Ui.View.RatioLayout>
            <com.mredrock.freshmanspecial.Ui.View.RatioLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
            android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
            android:layout_marginTop="20dp"
            app:ratio="0.381">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation = "0dp"
                android:onClick="@{() -> onClick.onBeautyClick()}"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/special_2017_cqupt_beauty"/>
            </android.support.v7.widget.CardView>

            </com.mredrock.freshmanspecial.Ui.View.RatioLayout>
            <com.mredrock.freshmanspecial.Ui.View.RatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginTop="20dp"
                app:ratio="0.381">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation = "0dp"
                    android:onClick="@{() -> onClick.onDataClick()}"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/special_2017_cqupt_data"/>
                </android.support.v7.widget.CardView>

            </com.mredrock.freshmanspecial.Ui.View.RatioLayout>
            <com.mredrock.freshmanspecial.Ui.View.RatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
                android:layout_marginTop="20dp"
                app:ratio="0.381">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation = "0dp"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/special_2017_military_training"
                        android:onClick="@{() -> onClick.onTrainingClick()}"
                        />
                </android.support.v7.widget.CardView>

            </com.mredrock.freshmanspecial.Ui.View.RatioLayout>

        </LinearLayout>
    </ScrollView>
</layout>