<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/Special_2017_whileBack">
    <RelativeLayout
        android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginTop="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
        android:id="@+id/special_2017_qq_group_search"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/special_2017_qq_group_search_cancel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#F7F7F9">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/special_2017_qq_group_search_image"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/search"
                />
            <EditText
                android:id="@+id/special_2017_qq_group_search_edit"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/special_2017_qq_group_search_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/Special_2017_content"
                android:hint="请输入学校或地区"
                android:background="#F7F7F9"
                android:textColorHint="@color/Special_2017_content"
                android:selectAllOnFocus="true"
                android:textSize="@dimen/Special_2017_text_title"/>
            <ImageView
                android:id="@+id/special_2017_qq_group_search_cancel_image"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/cancel"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <TextView
            android:visibility="gone"
            android:id="@+id/special_2017_qq_group_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/Special_2017_text_title"
        android:textColor="#65B2FF"
        android:text="取消"
        android:gravity="center"/>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/special_2017_qq_group_search_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
            android:text="搜索结果"
            android:textColor="#272727"
            android:textSize="@dimen/Special_2017_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/special_2017_qq_group_search_recycle"
            android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
