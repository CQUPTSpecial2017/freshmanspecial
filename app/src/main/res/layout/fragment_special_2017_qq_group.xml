<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/Special_2017_whileBack">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginTop="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/special_2017_qq_group_search_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/special_2017_qq_group_search_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入学校或地区"
                android:gravity="center"
                android:textSize="@dimen/Special_2017_text_title"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/special_2017_qq_group_recycle"
        android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginTop="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>