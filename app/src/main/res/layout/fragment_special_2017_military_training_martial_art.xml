<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ScrollView
    android:layout_marginTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="#EBF0F2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Special_2017_whileBack">
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="3dp"
                        android:layout_height="16dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="3dp"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="#699ffb">

                    </android.support.v7.widget.CardView>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="军训图片"
                        android:textSize="@dimen/Special_2017_title"
                        android:textColor="#666666"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/special_2017_military_martial_picture_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/Special_2017_activity_horizontal_margin"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"></android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Special_2017_whileBack"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="3dp"
                    android:layout_height="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="3dp"
                    app:cardCornerRadius="2dp"
                    app:cardBackgroundColor="#699ffb">

                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="军训视频"
                    android:textSize="@dimen/Special_2017_title"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="3dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/special_2017_military_martial_video_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="13dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/special_2017_military_martial_video_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginLeft="13dp"
                   android:textSize="@dimen/Special_2017_content"
                   android:textColor="#333333"
                   />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:textSize="@dimen/Special_2017_content"
                    android:textColor="#333333"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/Special_2017_whileBack"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="3dp"
                    android:layout_height="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="3dp"
                    app:cardCornerRadius="2dp"
                    app:cardBackgroundColor="#699ffb">

                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="军歌推荐"
                    android:textSize="@dimen/Special_2017_title"
                    android:textColor="#666666"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <RelativeLayout
                       android:layout_marginLeft="13dp"
                       android:layout_marginRight="3dp"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="01"
                           android:textColor="#65B2FF"
                           android:textSize="@dimen/Special_2017_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="强军战歌"
                           android:layout_marginLeft="30dp"
                           android:textColor="#666666"
                           android:textSize="@dimen/Special_2017_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:text="阎维文"
                           android:layout_marginRight="15dp"
                           android:textColor="#666666"
                           android:textSize="@dimen/Special_2017_content"/>

                   </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="咱当兵的人"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王宏伟"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="44dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="军中绿花"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="龚玥"
                            android:layout_marginRight="15dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保卫黄河"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="曹丁"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="44dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="打靶归来"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="贾世俊"
                            android:layout_marginRight="15dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="团结就是力量"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="群星"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="44dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精忠报国"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="屠洪刚"
                            android:layout_marginRight="10dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08"
                            android:textColor="#65B2FF"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75厘米"
                            android:layout_marginLeft="30dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="厘米"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="44dp"
                            android:textColor="#666666"
                            android:textSize="@dimen/Special_2017_content"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
</layout>