<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    android:background="@color/Special_2017_whileBack">
    <TextView
        android:id="@+id/item_special_2017_student_organization_distinct"
        android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Special_2017_content"
        />
        <TextView
            android:layout_marginTop="18dp"

            android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
            android:id="@+id/item_special_2017_student_organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/Special_2017_title"
            />
    <TextView
        android:id="@+id/item_special_2017_student_organization_content"
        android:layout_marginLeft="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginRight="@dimen/Special_2017_activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Special_2017_title"
        android:textColor="@color/Special_2017_distinct"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
</layout>