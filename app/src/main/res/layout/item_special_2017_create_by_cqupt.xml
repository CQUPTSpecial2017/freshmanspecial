<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@color/Special_2017_whileBack">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
            android:id="@+id/special_2017_create_by_cqupt_image"
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            />
            <ImageView
                android:id="@+id/special_2017_create_by_cqupt_start_action"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@drawable/start_action"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/special_2017_create_by_cqupt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/Special_2017_text_title"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

</LinearLayout>